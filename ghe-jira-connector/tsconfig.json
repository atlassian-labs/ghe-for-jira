{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es6", "es2017"],
    "types": ["node", "react", "jest"],
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "ForgeUI.createElement"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.styles.ts"]
}
